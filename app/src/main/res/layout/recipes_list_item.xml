<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/recipe_image"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_image_found"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_recipe_name"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/recipe_name"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_step_count"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/steps_image"
                android:text="@string/steps_count"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/steps_image"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@drawable/ic_stais"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_serving"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/servings_image"
                android:text="@string/steps_count"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/servings_image"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/recipe_step_count"
                android:padding="5dp"
                android:src="@drawable/ic_serve"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>